<Window x:Class="WampCallee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WampCallee"
        mc:Ignorable="d"
        Title="Wamp Client" Height="450" Width="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<StackPanel>
			<Button Content="Open Connection" Click="OpenConnection_Click" />
		</StackPanel>
		<Grid Grid.Row="1">
			<Border BorderBrush="#808080" BorderThickness="1" CornerRadius="4" Margin="4">
				<ScrollViewer VerticalScrollBarVisibility="Visible" Margin="4">
					<TextBlock x:Name="textBlockLog" TextWrapping="Wrap" />
				</ScrollViewer>
			</Border>
		</Grid>
    </Grid>
</Window>
